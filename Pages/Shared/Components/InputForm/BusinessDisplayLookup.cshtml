@model BusinessTemplateConfig


<label for="@Model.BusinessTemplateConfigId">@Model.BusinessTemplateFieldCaptionEn</label>

<div class="listsearch-input-item">
    <select data-placeholder="City" class="chosen-select no-search-select" name="@Model.BusinessTemplateConfigId" id="@Model.BusinessTemplateConfigId" required="@Model.IsRequired.ToString()">
        <option value="" selected>Please Select @Model.BusinessTemplateFieldCaptionEn</option>
        @{
            foreach (var item in Model.BusinessTemplateOptions)
            {
                <option value="@item.BusinessTemplateConfigId">@item.OptionEn</option>
            }
        }
    </select>
</div>




