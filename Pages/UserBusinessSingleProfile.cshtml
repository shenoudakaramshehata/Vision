<style>
    .profile-container {
        margin: 0 auto;
        background-color: #fff;
        overflow: hidden;
        margin-bottom:100px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .profile-container:hover {
            transform: translateY(-5px);
        }

    .profile-cover {
        position: relative;
        overflow: hidden;
    }

    .profile-head {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
    }

    .profile {
