@page
@model Vision.Pages.AddBusinessModel
@inject CRMDBContext _context
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "FrontSite/_TemplateLayout";
    var Categories = _context.BusinessCategories.Select(e => new { e.BusinessCategoryTitleAr, e.BusinessCategoryTitleEn, e.BusinessCategoryId });

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.css" />
<script src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js"></script>
<style>
    .form-group .form-control {
        background-color: #f4f4f4;
        border: none;
        border-bottom: 2px solid transparent;
        transition: border-color 0.3s ease;
    }

        .form-group .form-control:hover {
            border-color: #000;
            color: #000;
        }

        .form-group .form-control:focus {
            outline: none;
            border-color: #000;
            color: #000;
        }

    .file-upload {
        position: relative;
        display: inline-block;
    }

        .file-upload input[type="file"] {
            opacity: 0;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .file-upload label {
            display: inline-block;
            background-color: #3498db;
            color: #fff;
            padding: 8px 20px;
            border-radius: 4px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .file-upload label:hover {
                background-color: #2980b9;
            }

        .file-upload .file-name {
            display: block;
            margin-top: 5px;
        }

        .file-upload .file-names {
            display: block;
            margin-top: 5px;
            font-size: 14px;
            font-style: italic;
            color: #777;
        }

</style>
<!-- Start of Main -->
<main class="main checkout" style="padding-top: 250px; padding-bottom: 50px;">
    <!-- Start of PageContent -->
    <div class="page-content d-flex align-items-center justify-content-center">
        <div class="container">
            <form class="form checkout-form" action="#" method="post">
                <div class="row mb-9">
                    <div class="col-lg-9 pr-lg-4 mb-4">
                        <h3 class="title billing-title text-uppercase ls-10 pt-1 pb-3 mb-0">
                            Add Business details
                        </h3>
                       
                            <div class="form-group">
                            <label><i class="w-icon-shopify mr-1"></i> Category *</label>
                            <div class="select-box">
                                <select name="category" class="form-control form-control-md" onchange="showFields(this.value)">
                                    <option value="">Select a category</option>
                                    <option value="beauty_health">Beauty and Health</option>
                                </select>
                            </div>
                        </div>
                        <div id="beauty_healthFields" style="display: none;">
                        <div class="row mb-9">
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-products mr-1"></i> Subcategory</label>
                                <select class="form-control form-control-md" name="subcategory">
                                    <option value="">Select a subcategory</option>
                                    <option value="subcategory1">Health and beauty 2</option>
                                </select>
                            

                                
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-check mr-1"></i> Active</label>
                                    <div class="checkbox">
                                        <input type="checkbox" name="active">
                                    </div>
                                </div>
                            </div>

                            
                            <div class="col-lg-6 form-group">
                                <label><i class="w-icon-map-marker mr-1"></i> Location Map</label>
                                @*<input type="text" id="location-input" class="form-control form-control-md" name="location" placeholder="Enter a location">*@
                            </div>
                            <div id="map" style="height: 400px;"></div>


                            <div class="row mb-9">
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-ship-station mr-1"></i> Country</label>
                                <select class="form-control form-control-md" name="country">
                                    <option value="">Select a country</option>
                                    <option value="country1">Kuwait</option>
                                </select>
                            </div>

                                <div class="col-lg-6 form-group">
                                <label><i class="w-icon-shopify mr-1"></i> City</label>
                                <select class="form-control form-control-md" name="city">
                                    <option value="">Select a city</option>
                                    <option value="city1">Kuwait</option>
                                </select>
                            </div>
                           
                            
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-electronics mr-1"></i> Website</label>
                                <input type="text" class="form-control form-control-md" name="website">
                            </div>

                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-envelop3 mr-1"></i> Email</label>
                                <input type="email" class="form-control form-control-md" name="email">
                            </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-shopify mr-1"></i> Minimum Order Request</label>
                                    <input type="text" class="form-control form-control-md" name="minimum_order_request">
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-vendor-store mr-1"></i> Branches</label>
                                    <input type="number" class="form-control form-control-md" name="email">
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-wallet2 mr-1"></i> Payment Mothod</label>
                                    <select class="form-control form-control-md" name="city">
                                        <option value="">Select a method</option>
                                        <option value="city1">Cash</option>
                                        <option value="city2">Online</option>
                                    </select>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label>
                                        <i class="w-icon-truck mr-1"></i> Delivery Cost
                                    </label>
                                    <input type="number" class="form-control form-control-md" name="delivery_cost">
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-call2 mr-1"></i> Phone Number</label>
                                    <input type="text" class="form-control form-control-md" name="phone_number">
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-store mr-1"></i> Pre-order</label>
                                    <div class="checkbox">
                                        <input type="checkbox" name="preorder">
                                    </div>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-movie mr-1"></i> Video File</label>
                                <div class="file-upload">
                                    <input type="file" id="video-file" name="video-file">
                                    <label for="video-file">Choose File</label>
                                    <span class="file-name"></span>
                                </div>
                            </div>
                                <div class="col-lg-6 form-group">
                                    <label><i class="w-icon-withdraw mr-1"></i> Multiple Pictures</label>
                                <div class="file-upload">
                                    <input type="file" id="image-files" name="image-files" multiple>
                                    <label for="image-files">Choose Files</label>
                                    <span class="file-names"></span>
                                </div>
                            </div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="form-group place-order pt-6 row mb-9">
                        <button type="submit" class="btn btn-dark btn-block btn-rounded" style="width: 930px;">
                            Add Business
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- End of PageContent -->
</main>
<!-- End of Main -->

<script>
    function showFields(category) {
        // Hide all category fields
        document.getElementById('beauty_healthFields').style.display = 'none';
        // Hide fields for other categories

        // Show fields based on selected category
        if (category === 'beauty_health') {
            document.getElementById('beauty_healthFields').style.display = 'block';
        }
    }

    var map = L.map('map').setView([51.505, -0.09], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors',
        maxZoom: 18,
    }).addTo(map);

    var marker = L.marker([51.5, -0.09], {
        draggable: true
    }).addTo(map);

    marker.on('dragend', function (event) {
        var position = marker.getLatLng();
    });

    var videoFileInput = document.getElementById('video-file');
    var videoFileNameSpan = document.querySelector('.form-group .file-name');
    videoFileInput.addEventListener('change', function () {
        videoFileNameSpan.textContent = this.files[0].name;
    });

    var imageFilesInput = document.getElementById('image-files');
    var imageFileNamesSpan = document.querySelector('.form-group .file-names');
    imageFilesInput.addEventListener('change', function () {
        var fileNames = Array.from(this.files).map(function (file) {
            return file.name;
        });
        imageFileNamesSpan.textContent = fileNames.join(', ');
    });

</script>


