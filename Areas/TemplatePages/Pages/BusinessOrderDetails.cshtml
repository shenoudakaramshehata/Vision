@page
@model Vision.Areas.TemplatePages.Pages.BusinessOrderDetailsModel
@{
    Layout = "_DashBoard";

}
@{
    var locale = Request.HttpContext.Features.Get<IRequestCultureFeature>();
    var BrowserCulture = locale.RequestCulture.UICulture.ToString();
}
@inject CRMDBContext _context
@inject ApplicationDbContext _DbContext
<!-- wrapper-->

                <div class="col-md-9">
                    <div class="dashboard-title   fl-wrap">
                        <h3>Order Details</h3>
                    </div>
                    
                    <!-- profile-edit-container end-->
                    <!-- profile-edit-container-->
                    <div class="profile-edit-container fl-wrap block_box">
                        <!-- booking-list-->
                        @{
                            if(Model.order != null)
                            {
                                <div class="booking-list">
                                    <div class="booking-list-message">
                        <div class="booking-list-contr">
                            <form asp-page-handler="UpdateOrderDeliver">
                                <input asp-for="@Model.order.OrderId" hidden />
                                <input type="checkbox" asp-for="@Model.order.IsDeliverd" hidden />
                                <button type="submit" class="green-bg tolt" data-microtip-position="right" data-tooltip="Approve"><i class="fal fa-check"></i></button>
                            </form>
                            <form asp-page-handler="UpdateOrderCancel">
                                <input asp-for="@Model.order.OrderId" hidden />
                                <input type="checkbox" asp-for="@Model.order.IsCancelled" hidden />
                                <button type="submit" class="color-bg tolt" data-microtip-position="right" data-tooltip="Cancel"><i class="fal fa-trash"></i></button>
                            </form>
                        </div>
                                        <div class="booking-list-message-avatar">
                                            @{
                                                if(Model.order.ClassifiedBusiness != null)
                                                {
                                                    <img src="@Model.order.ClassifiedBusiness?.Mainpic" alt="">

                                                }
                                            }
                                        </div>
                                        @{
                                            if (Model.order?.IsPaid == false)
                                            {
                                                <span class="booking-list-new green-bg">Not paid</span>

                                            }
                                            else
                                            {
                                                <span class="booking-list-new green-bg">Paid order</span>

                                            }
                                        }
                                        <div class="booking-list-message-text">
                                            <h4>Order Total - <span>@Model.order?.OrderTotal</span></h4>
                                            <span>Order Date - <span>@Model.order?.OrderDate</span></span>
                                            <div class="booking-details fl-wrap">
                                                <span class="booking-title">Order Items :</span> :
                                                @{
                                                    var orderItems = _context.OrderItems.Where(a => a.OrderId == Model.order.OrderId).ToList();
                                                    foreach (var product in orderItems)
                                                    {
                                        <span class="booking-text"><a asp-page="ProductsDetails" asp-route-id="@product.Product.ProductId">@product.Product.TitleEn</a></span>
                                                        <span class="booking-text">@product.ProductQuantity</span>
                                                        <span class="booking-text">@product.ProductPrice</span>

                                                    }

                                                }
                                            </div>
                                            <div class="booking-details fl-wrap">
                                                <span class="booking-title">Order User Name:</span>
                                                @{
                                                    var UserInfo = _DbContext.Users.Where(a => a.Id == Model.order.UserId).FirstOrDefault();
                                                    if(UserInfo != null)
                                                    {
                                                        <span class="booking-text"><p>@UserInfo.UserName</p></span>

                                                    }
                                                }
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <p>There no order</p>
                            }

                            
                        }
                        <!-- dashboard-list end-->
                    </div>
                    
                </div>
                <!-- dashboard content end-->
@{

    //English
    if (BrowserCulture == "en-US")
    {
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/Template/css/reset.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/Template/css/plugins.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/Template/css/style.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/Template/css/dashboard-style.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/Template/css/color.css")">
        <script src="~/Template/js/jquery.min.js"></script>
        <script src="~/Template/js/plugins.js"></script>
        <script src="~/Template/js/scripts.js"></script>

    }
    //Arabic
    else
    {

        <link type="text/css" rel="stylesheet" href="@Url.Content("~/TemplateRTL/css/reset.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/TemplateRTL/css/plugins.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/TemplateRTL/css/style.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/TemplateRTL/css/dashboard-style.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/TemplateRTL/css/rtl-style.css")">
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/TemplateRTL/css/color.css")">

        <script src="~/TemplateRTL/js/jquery.min.js"></script>
        <script src="~/TemplateRTL/js/plugins.js"></script>
        <script src="~/TemplateRTL/js/scripts.js"></script>
    }

}