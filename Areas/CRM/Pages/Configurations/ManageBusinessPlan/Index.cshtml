<div class="row">
    <div class="col-lg-12">
        <div class="card" id="List">
            <div class="card-header border-0">
                <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                        <div class="search-box">
                            <input type="text" class="form-control search" id="txtSearch"
                                   placeholder="@sharedResource["Search for..."]">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#AddModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add a Plan"]
                            </button>

                        </div>
                    </div>
                </div> 
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table id="myTable" class="table  dt-responsive nowrap  align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>

                                    <th data-ordering="false">@sharedResource["TitleAr"]</th>
                                    <th data-ordering="false">@sharedResource["TitleEn"]</th>
                                    <th data-ordering="false">@sharedResource["Price"]</th>
                                    <th data-ordering="false">@sharedResource["DurationInMonth"]</th>
                                    <th data-ordering="false">@sharedResource["IsActive"]</th>

                                    
                                    <th data-ordering="false">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.Plans)
                                    {
                                        <tr>
                                            <td class=" text-center fw-bold">@item.PlanTlAr </td>

                                            <td class=" text-center fw-bold">@item.PlanTlEn </td>
                                            @*<td class="text-truncate text-center" style="max-width:350px; ">@Html.Raw(item.ContentAr)</td>*@
                                            <td class=" text-center fw-bold">@item.Price</td>
                                            @*<td class="text-truncate text-center" style="max-width:350px; "> @Html.Raw(item.ContentEn)</td>*@
                                            <td class="text-center">@item.DurationInMonth</td>
                                            <td class=" text-center">
                                                @if (item.IsActive.Value)
                                                {
                                                    <input type="checkbox" disabled checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" disabled />
                                                }

                                            </td>
                                            
                                            <td class=" text-center fw-bold">
                                                <ul class="list-inline hstack gap-2 mb-0">
                                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="View">
                                                        <a href="javascript:void(0)" data-bs-toggle="modal">
                                                            <i class="ri-eye-fill align-bottom text-muted" onclick="ShowViewPopUp(@item.BussinessPlanId)"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Edit">
                                                        <a class="edit-item-btn" href="javascript:void(0)" data-bs-toggle="modal">
                                                            <i class="ri-pencil-fill align-bottom text-muted" onclick="editButtonClick(@item.BussinessPlanId)"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Delete">
                                                        <a class="remove-item-btn" data-bs-toggle="modal" href="javascript:void(0)">
                                                            <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deletePlan(@item.BussinessPlanId)"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

            <!--end modal-->
        </div>
    </div>
    <!--end col-->
</div>

<partial name="_ViewPopup" model="@Model.BussinessPlan" view-data=" ViewData" />
<partial name="_AddPopup" model="@Model.BussinessPlan" view-data="ViewData" />

<partial name="_EditPopup" model="@Model.BussinessPlan" view-data="ViewData" />
<partial name="_DatchDelete" model="@Model.BussinessPlan" view-data="ViewData" />


