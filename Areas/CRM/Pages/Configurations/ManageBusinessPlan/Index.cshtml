    function editButtonClick(BussinessPlanId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/CRM/Configurations/ManageBusinessPlan/Index?handler=SinglePlanForEdit",

            data: { "BussinessPlanId": BussinessPlanId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                
                document.getElementById("EditId").value = response.BussinessPlanId
                document.getElementById("EditPlanTitleAr").value = response.PlanTlAr
                document.getElementById("EditPlanTitleEn").value = response.PlanTlEn

                document.getElementById("EditPrice").value = response.Price
                document.getElementById("EditDurationInMonth").value = response.DurationInMonth
                document.getElementById("EditIsActive").checked = response.IsActive
                console.log(response);
                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    // === VIEW ===//
    function ShowViewPopUp(BussinessPlanId) {

        $.ajax({
            type: "GET",
            url: "/CRM/Configurations/ManageBusinessPlan/Index?handler=SinglePlanForView",
            data: { "BussinessPlanId": BussinessPlanId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
               
                document.getElementById("TitleARId").innerHTML = response.PlanTlAr
                document.getElementById("TitleENId").innerHTML = response.PlanTlEn
                document.getElementById("Priceview").innerHTML = response.Price
                document.getElementById("DurationInMonth").innerHTML = response.DurationInMonth
                document.getElementById("DIsActiveId").innerHTML = response.IsActive
                if (response.IsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = "Active"

                }
                else {
                    document.getElementById("DIsActiveId").innerHTML = "Non-Active"
                }
                
                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }
