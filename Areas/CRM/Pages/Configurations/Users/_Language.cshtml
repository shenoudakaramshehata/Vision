@model List<Vision.Models.Language>

@{
    if (Model.Count > 0)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Languages</h5>
                <div class="d-flex flex-wrap gap-2 fs-15">
                    @{
                        foreach (var item in Model)
                        {
                            <a href="javascript:void(0);"
                       class="badge badge-soft-primary">@item.LanguageTitle</a>
                        }
                    }

                </div>
            </div><!-- end card body -->
        </div>

        <!-- end card -->
    }
}
