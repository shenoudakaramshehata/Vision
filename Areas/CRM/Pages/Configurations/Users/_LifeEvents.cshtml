@{
}
@model List<Vision.Models.LifeEvent>
@{
    if (Model.Count > 0)
    {
        <div class="row">
            @{
                foreach (var item in Model)
                {
        <div class="col-sm-6 col-xl-3">
            <!-- Simple card -->
            
                    <div class="card">
                        <img class="card-img-top img-fluid" src="~/@item.Media" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title mb-2">@item.Caption</h4>
                            <p class="card-text">@item.Details</p>
                            <div class="text-end">
                                <p class="text text-primary">@item.EventType </p>
                            </div>
                        </div>
                    </div>

                    <!-- end card -->
               
        </div>
                }
            }
        </div>
        <!-- end col -->
    }
}
  
    
