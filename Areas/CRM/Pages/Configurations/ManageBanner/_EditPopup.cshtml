                                        <label asp-for="@Model.EntityTypeId" for="car-rental-name">@sharedResource["Banner Type"] <small class="text-danger">*</small></label>

                                        <select id="EditCatId" data-val="true" data-val-required="@sharedResource["Banner Type"]" asp-for="@Model.EntityTypeId" class="form-select required" aria-label="Default select example" required onchange="EditFillTypes(this.value)">
                                            

                                            @{
                                                if (_context.EntityTypes.ToList() != null)
                                                {
                                                    foreach (var item in _context.EntityTypes.ToList())

