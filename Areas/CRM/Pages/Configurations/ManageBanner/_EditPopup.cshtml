                                    </div>

                                </div>
                                 <div class="col-md-12 form-group pt-3" >
                                    <img src="~/assets/images/users/user-dummy-img.jpg" class="bannerLargeImage" width="440" height="120">
                                  </div>
                                 <div class="col-md-12 form-group" style="padding-left: 1.3rem;">
                                     <label for="formFile" class="form-label">@sharedResource["Large Image"]</label>
                                     <input class="form-control" name="EditLargeImage" type="file">
                                  </div>
                                <div class="row col-12">
                                     <div class="form-group col-6">
                                        <label asp-for="@Model.BannerOrderIndex"  class="control-label">@sharedResource["Order Index"]</label>
                                        <input asp-for="@Model.BannerOrderIndex" id="BannerOrderIndex" class="form-control" />
                                        <span asp-validation-for="@Model.BannerOrderIndex" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6" style="padding-top: 2rem">
                                        <div class="form-check">
                                            <input asp-for="@Model.BannerIsActive" id="BannerIsActive" class="form-check-input" type="checkbox">
                                            <label for="@Model.BannerIsActive" class="form-check-label">@sharedResource["Is Active"]</label>
                                            <span asp-validation-for="@Model.BannerIsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group mt-2">
                                    <input type="submit" value="@sharedResource["Edit"]" class="btn btn-primary" />
                                </div>
                            </form>
                           
