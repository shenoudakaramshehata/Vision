    function ShowViewPopUp(BannerId)
             {

     $.ajax({
         type: "GET",
         url: "/CRM/Configurations/ManageBanner/Index?handler=SingleBannerForView",
         data: { "BannerId": BannerId},
         contentType: "application/json",
         dataType: "json",
         success: function (response) {

                     document.getElementById("DBannerPicId").src = "/"+response.BannerPic
                     document.getElementById("DLargePicId").src = "/"+response.LargePic
                     document.getElementById("DEntityTypeId").innerHTML = response.EntityTitleEn
                     document.getElementById("DSortOrderId").innerHTML = response.BannerOrderIndex
                     document.getElementById("DIsActiveId").innerHTML = response.BannerIsActive
                     if (response.BannerIsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = "Active"

                     }
                     else{
                          document.getElementById("DIsActiveId").innerHTML = "Not Active"
                     }

                     $('#QuickViewPoup').modal('show');

         },
         failure: function (response) {
             alert(response);
         }
     });

     }
