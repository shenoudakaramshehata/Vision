@page
@model Vision.Areas.CRM.Pages.Configurations.ManageBanner.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    
    ViewBag.Title = @sharedResource["Manage Banners"];
    ViewBag.pTitle = @sharedResource["Banners"];
    ViewBag.pageTitle = @sharedResource["Banners"];
}
@section styles{
<!-- Sweet Alert css-->
<link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="leadsList">
            <div class="card-header border-0">

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                        <div class="search-box">
                            <input type="text" class="form-control search"
                                   placeholder="@sharedResource["Search for..."]">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#showModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add Banner"]
                            </button>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table class="table align-middle" id="customerTable">
                            <thead class="table-light">
                                <tr>

                                    <th class="sort" data-sort="name">@sharedResource["Image"]</th>
                                    <th class="sort" data-sort="company_name">@sharedResource["Entity Type"]</th>
                                    <th class="sort" data-sort="leads_score">@sharedResource["Sort Order"]</th>
                                    <th class="sort" data-sort="phone">@sharedResource["Is Active"]</th>
                                    <th class="sort" data-sort="phone">@sharedResource["Actions"]</th>

                                </tr>
                            </thead>
                            <tbody class="list form-check-all">
                                @{
                                    foreach (var item in Model.Banners)
                                    {
                                        <tr>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0">
                                                        <img src="~/@item.BannerPic" alt=""
                                                     class="avatar-xxs rounded-circle image_src object-cover">
                                                    </div>
                                                </div>
                                            </td>
                                            @{
                                                if (Model.BrowserCulture == "en-US")
                                                {
                                                    <td class="company_name">@item.EntityType.EntityTitleEn</td>
                                                }
                                                else
                                                {

                                                    <td class="company_name">@item.EntityType.EntityTitleAr</td>

                                                }
                                            }

                                            <td class="leads_score">@item.BannerOrderIndex</td>
                                            <td class="leads_score">@item.BannerIsActive</td>

                                            <td>
                                                <ul class="list-inline hstack gap-2 mb-0">


                                                    <li class="list-inline-item" data-bs-toggle="tooltip"
                                                    data-bs-trigger="hover" data-bs-placement="top"
                                                    title="View">
                                                        <a href="javascript:void(0)" data-bs-toggle="modal">
                                                            <i class="ri-eye-fill align-bottom text-muted" onclick="ShowViewPopUp(@item.BannerId)"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item" data-bs-toggle="tooltip"
                                                    data-bs-trigger="hover" data-bs-placement="top"
                                                    title="Edit">
                                                        <a class="edit-item-btn" href="javascript:void(0)"
                                                       data-bs-toggle="modal">
                                                            <i class="ri-pencil-fill align-bottom text-muted" onclick="editButtonClick(@item.BannerId)"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item" data-bs-toggle="tooltip"
                                                    data-bs-trigger="hover" data-bs-placement="top"
                                                    title="Delete">
                                                        <a class="remove-item-btn" data-bs-toggle="modal"
                                                       href="javascript:void(0)">
                                                            <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deleteBanner(@item.BannerId)"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>


                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json"
                                           trigger="loop" colors="primary:#121331,secondary:#08a88a"
                                           style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ leads We
                                    did not find any
                                    leads for you search.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <div class="pagination-wrap hstack gap-2">
                            <a class="page-item pagination-prev disabled" href="#">
                                Previous
                            </a>
                            <ul class="pagination listjs-pagination mb-0"></ul>
                            <a class="page-item pagination-next" href="#">
                                Next
                            </a>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="showModal" tabindex="-1"
                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content p-3">
                            <div class="modal-header bg-light p-3">
                                <h5 class="modal-title" id="exampleModalLabel"></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close" id="close-modal"></button>
                            </div>

                            <form method="post" enctype="multipart/form-data" asp-area="CRM" asp-page="/Configurations/ManageBanner/Index" asp-page-handler="AddBanner" onsubmit="return validateForm();">
                                <input type="text" hidden name="SelectedVal" id="SelValueId" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-lg-12">
                                    <div class="text-center col-lg-12">
                                        <div class="position-relative d-inline-block">
                                            <div class="position-absolute bottom-0 end-0">
                                                <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title="@sharedResource["Select Image"]">
                                                    <div class="avatar-xs cursor-pointer">
                                                        <div class="avatar-title bg-light border rounded-circle text-muted">
                                                            <i class="ri-image-fill"></i>
                                                        </div>
                                                    </div>
                                                </label>
                                                <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                       accept="image/*" required>
                                            </div>
                                            <div class="avatar-lg p-1">
                                                <div class="avatar-title bg-light rounded-circle">
                                                    <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover" />
                                                </div>
                                            </div>
                                        </div>
                                        <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>

                                    </div>
                                </div>

                                <div class="row col-12">

                                    <div class="form-group col-12">
                                        <label asp-for="AddBanner.EntityTypeId" for="car-rental-name">@sharedResource["Banner Type"] <small class="text-danger">*</small></label>

                                        <select id="CatId" data-val="true" data-val-required="@sharedResource["Banner Type"]" asp-for="AddBanner.EntityTypeId" class="form-select required" aria-label="Default select example" required onchange="FillTypes(this.value)">
                                            <option selected value=0>@sharedResource["Select Banner Type"]</option>

                                            @{
                                                if (@Model.EntityTypes != null)
                                                {
                                                    foreach (var item in @Model.EntityTypes)

                                                    {

                                                        if (Model.BrowserCulture == "en-US")
                                                        {
                                                            <option value="@item.EntityTypeId">@item.EntityTitleEn</option>


                                                        }
                                                        else
                                                        {
                                                            <option value="@item.EntityTypeId">@item.EntityTitleAr</option>



                                                        }

                                                    }
                                                }
                                            }

                                        </select>
                                        @{
                                            if (Model.BrowserCulture == "en-US")
                                            {
                                                <span id="CatSpanId" style="display:none" class="text-danger">Banner Type Is Required</span>


                                            }
                                            else
                                            {

                                                <span id="CatSpanId" style="display:none" class="text-danger">النوع مطلوب</span>



                                            }


                                        }


                                    </div>

                                </div>

                                <div class="row col-12">

                                    <div class="form-group col-12" id="ControlContent">
                                    </div>

                                </div>
                                   <div class="col-md-12 form-group" style="padding-left: 1.3rem;">
                                     <label for="formFile" class="form-label">@sharedResource["Large Image"]</label>
                                     <input class="form-control" name="LargeImage" type="file">
                                  </div>
                                <div class="row col-12">
                                    <div class="form-group col-6">
                                        <label asp-for="AddBanner.BannerOrderIndex" class="control-label">@sharedResource["Order Index"]</label>
                                        <input asp-for="AddBanner.BannerOrderIndex" class="form-control" />
                                        <span asp-validation-for="AddBanner.BannerOrderIndex" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6" style="padding-top: 2rem">
                                        <div class="form-check">
                                            <input asp-for="AddBanner.BannerIsActive" class="form-check-input" type="checkbox">
                                            <label for="AddBanner.BannerIsActive" class="form-check-label">@sharedResource["Is Active"]</label>
                                            <span asp-validation-for="AddBanner.BannerIsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group mt-2">
                                    <input type="submit" value="@sharedResource["Create"]" class="btn btn-primary" />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
                <!--end modal-->
                <!-- Modal -->
                <!--end modal -->



            </div>
        </div>

    </div>
    <!--end col-->
</div>
<!--end row-->
<partial name="_ViewPop" model="@Model.AddBanner" view-data=" ViewData" />
<partial name="_EditPopup" model="@Model.AddBanner" view-data=" ViewData" />
<partial name="_DatchDelete" model="@Model.AddBanner" view-data=" ViewData" />


