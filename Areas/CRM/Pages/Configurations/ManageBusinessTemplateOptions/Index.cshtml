    function editButtonClick(BusinessTemplateOptionId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
                url: "/Admin/Configurations/ManageBusinessTemplateOptions/Index?handler=SingleOptionForEdit",

                data: { "BusinessTemplateOptionId": BusinessTemplateOptionId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("HiddenId").value = response.BusinessTemplateOptionId
                document.getElementById("ArEditTitle").value = response.OptionAr
                document.getElementById("ENEditTitle").value = response.OptionEn
                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    function ShowViewPopUp(BusinessTemplateOptionId) {
        $.ajax({
            type: "GET",
                url: "/Admin/Configurations/ManageBusinessTemplateOptions/Index?handler=SingleOptionForView",
                data: { "BusinessTemplateOptionId": BusinessTemplateOptionId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                    document.getElementById("OpptionId").innerHTML = response.BusinessTemplateOptionId
                    document.getElementById("OptionAr").innerHTML = response.OptionAr
                    document.getElementById("OptionEn").innerHTML = response.OptionEn
                $('#QuickViewPoup').modal('show');

            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteOption(BusinessTemplateOptionId) {
        $.ajax({
            type: "GET",
                url: "/Admin/Configurations/ManageBusinessTemplateOptions/Index?handler=SingleOptionForDelete",
                data: { "BusinessTemplateOptionId": BusinessTemplateOptionId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                    document.getElementById("DeleteOptionId").value = response.BusinessTemplateOptionId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }
