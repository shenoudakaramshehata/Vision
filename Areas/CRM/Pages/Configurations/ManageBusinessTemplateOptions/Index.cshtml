@model Vision.Areas.CRM.Pages.Configurations.ManageBusinessTemplateOptions.IndexModel

@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
    ViewBag.Title = @sharedResource["Manage Business Template Options"];
    ViewBag.pTitle = @sharedResource["Manage Business Template Options"];
    ViewBag.pageTitle = @sharedResource["Manage Business Template Options"];
    ViewData["Title"] = @sharedResource["Manage Business Template Options"];

}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
<!--datatable responsive css-->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
