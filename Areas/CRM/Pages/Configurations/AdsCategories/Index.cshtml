                            <thead class="table-light">
                                <tr>

                                    <th data-ordering="false">@sharedResource["Logo"]</th>
                                    <th data-ordering="false">@sharedResource["ArTitle"]</th>
                                    <th data-ordering="false">@sharedResource["ENTitle"]</th>
                                    <th data-ordering="false">@sharedResource["Sort Order"]</th>
                                    <th data-ordering="false">@sharedResource["Active"]</th>

                                    <th data-ordering="false">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.ClassifiedAdsCategories)
                                    {
                                        <tr>
                                            <td>

                                                <img src="~/@item.ClassifiedAdsCategoryPic" alt="logo" style="width:50%"/> 
                                            </td>
                                            <td class=" text-center fw-bold">@item.ClassifiedAdsCategoryTitleAr </td>
                                            @*<td class="text-truncate text-center" style="max-width:350px; ">@Html.Raw(item.ContentAr)</td>*@
                                            <td class=" text-center fw-bold">@item.ClassifiedAdsCategoryTitleEn</td>
                                            @*<td class="text-truncate text-center" style="max-width:350px; "> @Html.Raw(item.ContentEn)</td>*@
                                            <td class="text-center">@item.ClassifiedAdsCategorySortOrder</td>
                                            <td class="text-center">
                                                @if (item.ClassifiedAdsCategoryIsActive)
                                                {
                                                    <input type="checkbox" disabled checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" disabled />
                                                }
                                            </td>
                                            <td class=" text-center fw-bold">
                                                <ul class="list-inline hstack gap-2 mb-0">
                                                   
                                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Edit">
                                                        <a class="edit-item-btn" href="javascript:void(0)" data-bs-toggle="modal">
                                                            <i class="ri-pencil-fill align-bottom text-muted" onclick="editButtonClick(@item.ClassifiedAdsCategoryId)"></i>
                                                        </a>
                                                    </li>
                                                   
                                                </ul>
                                            </td>
                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>

