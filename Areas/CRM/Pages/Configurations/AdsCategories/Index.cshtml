    function editButtonClick(ClassifiedAdsCategoryId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/CRM/Configurations/AdsCategories/Index?handler=SingleAdsCategoryForEdit",

            data: { "ClassifiedAdsCategoryId": ClassifiedAdsCategoryId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById('img').src = "/" + response.ClassifiedAdsCategoryPic
                document.getElementById("HiddenId").value = response.ClassifiedAdsCategoryId
                document.getElementById("ArEditTitle").value = response.ClassifiedAdsCategoryTitleAr
                document.getElementById("ENEditTitle").value = response.ClassifiedAdsCategoryTitleEn
                document.getElementById("img").value = response.ClassifiedAdsCategoryPic
                document.getElementById("ClassifiedAdsCategorySortOrder").value = response.ClassifiedAdsCategorySortOrder
                document.getElementById("ClassifiedAdsCategoryDescAr").value = response.ClassifiedAdsCategoryDescAr
                document.getElementById("ClassifiedAdsCategoryDescEn").value = response.ClassifiedAdsCategoryDescEn

                
                document.getElementById("EditIsActive").checked = response.ClassifiedAdsCategoryIsActive
                console.log(response);
                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    // === VIEW ===//
    function ShowViewPopUp(Id) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageSoundCategory/Index?handler=SingleSoundCategoryForView",
            data: { "Id": Id },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("SImage").src = "/" + response.Image
                document.getElementById("STitle").innerHTML = response.ArTitle
                document.getElementById("showENTitle").innerHTML = response.ENTitle

                document.getElementById("SIsActive").innerHTML = response.IsActive
                if (response.IsActive == true) {
                    document.getElementById("SIsActive").innerHTML = "Active"

                }
                else {
                    document.getElementById("SIsActive").innerHTML = "Non-Active"
                }

                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteSoundCategory(Id) {
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageSoundCategory/Index?handler=SingleSoundCategoryForDelete",
            data: { "Id": Id },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteSoundCategoryId").value = response.Id
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
