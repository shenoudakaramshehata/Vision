                     document.getElementById("AreaHiddenId").value = response.AreaId
                    
                     document.getElementById("CityId").value = response.CityId
                     document.getElementById("AreaTlAr").value = response.AreaTlAr
                     document.getElementById("AreaTlEn").value = response.AreaTlEn
                     if(response.AreaIsActive){
                         document.getElementById("AreaIsActive").checked=true;
                     }else{
                                 document.getElementById("AreaIsActive").checked=false;
                            
                     }
                     document.getElementById("AreaOrderIndex").value = response.AreaOrderIndex
                     
                     
                $('#showEditModal').modal('show');
               

         },

         failure: function (response) {
             alert(response);
