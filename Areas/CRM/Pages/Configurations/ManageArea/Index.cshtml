    function ShowViewPopUp(AreaId)
             {

     $.ajax({
         type: "GET",
         url: "/CRM/Configurations/ManageArea/Index?handler=SingleAreaForView",
         data: { "AreaId": AreaId},
         contentType: "application/json",
         dataType: "json",
         success: function (response) {
                     document.getElementById("DCityTlEn").innerHTML = response.CityTlEn
                     document.getElementById("DAreaTlAr").innerHTML = response.AreaTlAr
                     document.getElementById("DAreaTlEn").innerHTML = response.AreaTlEn
                     document.getElementById("DCityTlAr").innerHTML = response.CityTlAr
                     document.getElementById("DAreaOrderIndex").innerHTML = response.AreaOrderIndex
                     document.getElementById("DAreaIsActive").innerHTML = response.AreaIsActive
                     if (response.AreaIsActive == true) {
                    document.getElementById("DAreaIsActive").innerHTML = "Active"

                     }
                     else{
                          document.getElementById("DAreaIsActive").innerHTML = "Not Active"
                     }

                     $('#QuickViewPoup').modal('show');

         },
         failure: function (response) {
             alert(response);
         }
     });

     }
     function deleteArea(AreaId){


             $.ajax({
                 type: "GET",
                 url: "/CRM/Configurations/ManageArea/Index?handler=SingleAreaForDelete",
                 data: { "AreaId": AreaId },
                 contentType: "application/json",
                 dataType: "json",
                 success: function (response) {
                     console.log("Enter Delete");
                     document.getElementById("DeleteAreaId").value = response.AreaId
                     $('#deleteRecordModal').modal('show');


                 },
                 failure: function (response) {
                     alert(response);
                 }
             });
     }
       function editButtonClick(AreaId) {


             console.log(AreaId);
